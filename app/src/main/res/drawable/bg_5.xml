<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/grey" >
            </solid>

            <stroke
                android:width="1dp"
                android:color="@color/grey" >
            </stroke>

            <corners
                android:radius="@dimen/_6sdp"
                android:color="@color/text_color_tab" >
            </corners>
        </shape>
    </item><!-- pressed -->
    <item
        android:state_focused="true"
        >
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/alt_grey" >
            </solid>

            <stroke
                android:width="1dp"
                android:color="@color/alt_grey" >
            </stroke>

            <corners
                android:radius="@dimen/_6sdp"
                android:color="@color/text_color_tab" >
            </corners>
        </shape>
    </item><!-- focused -->

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/brand_color" >
            </solid>

            <stroke
                android:width="1dp"
                android:color="@color/brand_color" >
            </stroke>

            <corners
                android:radius="@dimen/_6sdp"
                android:color="@color/text_color_tab" >
            </corners>
        </shape>
    </item><!-- default -->
</selector>